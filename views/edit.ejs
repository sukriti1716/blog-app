<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<div class="container">
    <form action="/blogs/<%=blog.id%>?_method=PUT" method="post">
        <div>
            <label for="title">Title</label><br>
            <input type="text" id="title" name="title"  value="<%=blog.title%>">
        </div>
        <div>
            <label for="img">Image</label><br>
            <input type="text" id="img" name="img"  value="<%=blog.img%>">
        </div>
        <div>
            <label for="author">Author</label><br>
            <input type="text" id="author" name="author" value="<%=blog.author%>">
        </div>
        <div>
            <label for="views">Views</label><br>
            <input type="text" id="views" name="views"  value="<%=blog.views%>">
        </div>
        <div>
            <label for="desc">Description</label><br>
            <textarea name="desc" id="desc" cols="30" rows="10"><%=blog.desc%></textarea>
        </div>

        <button class="btn-primary" type="submit">Save</button>
    </form>
</div>

<%-include('../partials/footer')%>

