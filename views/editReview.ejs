<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<div class="container">
    <form action="/reviews/<%=review.id%>?_method=PUT" method="post">
        <div>
            <label for="name">Name</label><br>
            <input type="text" id="name" name="name" placeholder="Enter Name" value="<%=review.name%>">
        </div>
        <div>
            <label for="author">Author Name</label><br>
            <input type="text" id="author" name="author" placeholder="Enter Author Name" value="<%=review.author%>">
        </div>
        <div>
            <label for="rating">Rating</label><br>
            <input type="text" id="rating" name="rating" placeholder="Enter Rating" value="<%=review.rating%>">
        </div>
        <div>
            <label for="recommended">Recommend Or Not</label>
            <input type="checkbox" id="recommended" name="recommended" value="true" value="<%=review.recommended%>">
        </div>
        <div>
            <label for="title">Title of blog</label><br>
            <input type="text" id="title" name="title" placeholder="Enter Title" value="<%=review.title%>">
        </div>
        <div>
            <label for="desc">Enter Comments</label><br>
            <textarea name="desc" id="desc" cols="30" rows="10"><%=review.desc%></textarea>
        </div>

        <button class="btn-primary" type="submit">Submit</button>
    </form>
</div>

<%-include('../partials/footer')%>
